<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cms.mapper.ActivityMapper">
    <resultMap id="BaseResultMap" type="com.cms.entity.Activity">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="club_id" property="clubId" jdbcType="BIGINT"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="start_time" property="startTime" jdbcType="TIMESTAMP"/>
        <result column="end_time" property="endTime" jdbcType="TIMESTAMP"/>
        <result column="location" property="location" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, club_id, title, description, start_time, end_time, location, create_time, update_time
    </sql>

    <insert id="insert" parameterType="com.cms.entity.Activity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO activities (club_id, title, description, start_time, end_time, location, create_time, update_time)
        VALUES (#{clubId}, #{title}, #{description}, #{startTime}, #{endTime}, #{location}, #{createTime}, #{updateTime})
    </insert>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM activities
        WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM activities
    </select>

    <select id="selectByClubId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM activities
        WHERE club_id = #{clubId}
    </select>

    <update id="update" parameterType="com.cms.entity.Activity">
        UPDATE activities
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="description != null">description = #{description},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="location != null">location = #{location},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM activities WHERE id = #{id}
    </delete>
</mapper>
