<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cms.mapper.FileMapper">
    <resultMap id="BaseResultMap" type="com.cms.entity.FileRecord">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="uploader_id" property="uploaderId" jdbcType="BIGINT"/>
        <result column="club_id" property="clubId" jdbcType="BIGINT"/>
        <result column="filename" property="filename" jdbcType="VARCHAR"/>
        <result column="file_path" property="filePath" jdbcType="VARCHAR"/>
        <result column="file_type" property="fileType" jdbcType="VARCHAR"/>
        <result column="upload_time" property="uploadTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, uploader_id, club_id, filename, file_path, file_type, upload_time
    </sql>

    <insert id="insert" parameterType="com.cms.entity.FileRecord" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO files (uploader_id, club_id, filename, file_path, file_type, upload_time)
        VALUES (#{uploaderId}, #{clubId}, #{filename}, #{filePath}, #{fileType}, #{uploadTime})
    </insert>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM files
        WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM files
    </select>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM files WHERE id = #{id}
    </delete>
</mapper>
