<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cms.mapper.ClubMemberMapper">
    <resultMap id="BaseResultMap" type="com.cms.entity.ClubMember">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="club_id" property="clubId" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="role" property="role" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="join_time" property="joinTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, club_id, user_id, role, status, join_time
    </sql>

    <insert id="insert" parameterType="com.cms.entity.ClubMember" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO club_members (club_id, user_id, role, status, join_time)
        VALUES (#{clubId}, #{userId}, #{role}, #{status}, #{joinTime})
    </insert>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM club_members
        WHERE id = #{id}
    </select>

    <select id="selectByClubId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM club_members
        WHERE club_id = #{clubId}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM club_members
        WHERE user_id = #{userId}
    </select>

    <select id="selectByClubIdAndUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM club_members
        WHERE club_id = #{clubId} AND user_id = #{userId}
    </select>

    <update id="updateStatus">
        UPDATE club_members
        SET status = #{status}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM club_members WHERE id = #{id}
    </delete>

    <delete id="deleteByClubIdAndUserId">
        DELETE FROM club_members WHERE club_id = #{clubId} AND user_id = #{userId}
    </delete>
</mapper>
