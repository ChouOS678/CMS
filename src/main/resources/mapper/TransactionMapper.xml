<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cms.mapper.TransactionMapper">
    <resultMap id="BaseResultMap" type="com.cms.entity.Transaction">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="club_id" property="clubId" jdbcType="BIGINT"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
        <result column="amount" property="amount" jdbcType="DECIMAL"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="creator_id" property="creatorId" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, club_id, type, amount, description, creator_id, create_time
    </sql>

    <insert id="insert" parameterType="com.cms.entity.Transaction" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO transactions (club_id, type, amount, description, creator_id, create_time)
        VALUES (#{clubId}, #{type}, #{amount}, #{description}, #{creatorId}, #{createTime})
    </insert>

    <select id="selectByClubId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM transactions
        WHERE club_id = #{clubId}
    </select>

    <update id="update" parameterType="com.cms.entity.Transaction">
        UPDATE transactions
        <set>
            <if test="type != null">type = #{type},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="description != null">description = #{description},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM transactions WHERE id = #{id}
    </delete>
</mapper>
