<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cms.mapper.ActivityParticipantMapper">
    <resultMap id="BaseResultMap" type="com.cms.entity.ActivityParticipant">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="activity_id" property="activityId" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="signup_time" property="signupTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, activity_id, user_id, status, signup_time
    </sql>

    <insert id="insert" parameterType="com.cms.entity.ActivityParticipant" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO activity_participants (activity_id, user_id, status, signup_time)
        VALUES (#{activityId}, #{userId}, #{status}, #{signupTime})
    </insert>

    <select id="selectByActivityId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM activity_participants
        WHERE activity_id = #{activityId}
    </select>

    <select id="selectByActivityIdAndUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM activity_participants
        WHERE activity_id = #{activityId} AND user_id = #{userId}
    </select>

    <update id="updateStatus">
        UPDATE activity_participants
        SET status = #{status}
        WHERE id = #{id}
    </update>
</mapper>
